header.bg-blur
  .listing
    img.header-img ng-src="{{class.image}}"
.bg-gray
  .show.row-space-top-6
    .row.bg-white.no-margin
      .col-md-8.no-padding
        .event-img
          img.class-img ng-src="{{class.image}}"
      .col-md-4.no-padding
        .event-details
          h2
            | {{class.title}}
          div ng-repeat="date in class.dates"
            h4 ng-bind="date | date:'MMMM d, yyyy'"
              | {{date}}
          h4.location
            | {{class.location}}
          h4.price
            | â‚± {{class.price}}
          .book
            button.btn.book-btn ng-click="book()"
              | Book Now
      .row
        .col-md-8
          .description
            h3 Description
            p
              | {{class.description}}
            h4.row-space-top-7.row-space-4 Speakers:
            .row
              .col-md-3.center
                =image_tag "dacanay.jpg", :class => "tutor-img"
              .col-md-9
                p.speaker-name
                  | Father Dacanay, SJ
                span
                  | Ateneo Professor
                button.btn.view-speaker-btn ng-click="getSpeaker('Father Dacanay, SJ')"
                  | View Details
            h5.row-space-top-7 Tags
            span.tags ng-repeat="tag in class.tags"
              | #
              | {{tag}} 
        .col-md-4
          .description
            h4 Date and Time
            div ng-repeat="date in class.dates"
              p ng-bind="date | date:'EEE, MMM d, yyyy'"
                | {{date}}
              p
                | {{class.schedule}}
            h4.row-space-top-7 Address
            p
              | {{class.venue}}
            p
              | {{class.streetAddress}} {{class.city}}
            p
              | {{class.postalCode}}
